<div class='container'>
    <div class='row'>
        <div>
            <h3>ジャンル編集</h3>
            <%= form_with model: @genre, url: admin_genre_path do |f| %>
            <div class="form-group">
                <p>ジャンル名</p>
                <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.submit '変更を保存', class: "btn btn-success" %>
            </div>
            <% end %>
        </div>
    </div>
</div>