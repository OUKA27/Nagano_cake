<h3>ジャンル一覧・追加</h3>
    <%= form_with model: @genre, url:admin_genres_path do |f| %>
        <div class="form-group">
            <p>ジャンル名</p>
            <%= text_field :name %>
            <%= f.submit '新規登録', class: "btn btn-info btn-md"  %>
        </div>
    <% end %>

<table class="table">
    <thead>
        <tr>
            <td>ジャンル</td>
            <td></td>
        </tr>
    </thead>
    <% @genres.each do |genre| %>
        <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn-sm btn-success" %></td>
        </tr>
    <% end %>
</table>