<div class="row" style= "width: 80%; margin: 20px auto;">
    <%= form_with model: @item, url :admin_items_path do |f| %>
    <div class="form-horizontal">
        <h4 style="margin-bottom: 20px; border-left: 2px solid #2D6F4C; padding; 10px;">商品編集</h4>
        
        <div class="form-group">
            <label class="col-sm-2 control-label">商品画像</label>
            <div class="col-sm-10">
                <%= f.attachment_field :image %>
            </div>
        </div>
        
        <div class="form-group">
            <label class="col-sm-2 control-label">商品名</label>
            <div class="col-sm-6">
                <%= f.text_field :name, class:"form-control", id:"InputName", autocomplete: "name" %>
            </div>
        </div>
        
        <div class="form-group">
            <label class="col-sm-2 control-label">商品説明</label>
            <div class="col-sm-7">
                <%= f.text.area :introduction, class:"form-control", id:"InputIntroduction", autocomplete: "introduction", rows: 10 %>
            </div>
        </div>
        
        <div class="form-group">
            <label class="col-sm-2 control-label">ジャンル</label>
            <%= f.collection_select :genre_id, @genres, :id, :name %>
        </div>
        
        <div class="form-group">
            <label class="col-sm-2 control-label">税抜価格</label>
            <%= f.text_field :price, autofocus: true, autocomplete: "price" %>
        </div>
        
        <div class="form-group">
            <label class="col-sm-2 control-label">販売ステータス</label>
            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active, "販売中", value: true %>
            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active, "販売停止中", value: false %>
        </div>
        
        <div class="actions">
            <label class="col-sm-2 control-label"></label>
                <%= f.submit "変更を保存", class:"btn btn-primary btn-md" %>
        </div>
    </div>
</div>